{
  "variables": {
      "vm_name": "freebsd-10.1",
      "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/releases/ISO-IMAGES/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
      "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
      "iso_checksum_type": "sha256",
      "boot_prefetch": "<esc><wait>boot -s<enter><wait><wait10><wait5>/bin/sh<enter><wait>mdmfs -s 100m md1 /tmp<enter><wait>mdmfs -s 100m md2 /mnt<enter><wait>dhclient -p /tmp/dhclient.pid -l /tmp/dhclient.lease em0<enter><wait5>",
      "boot_postfetch": "bsdinstall script /tmp/installerconfig; shutdown -r now<enter>",
      "boot_wait": "5s",
      "disk_size": 40960,
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": true
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/zfsboot-fix.sh | sh <enter><wait5>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "freebsd-64",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/zfsboot-fix.sh | sh <enter><wait5>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "qemu",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/zfsboot-fix.sh | sh <enter><wait5>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/vmguest.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
      "only": ["virtualbox-iso", "vmware-iso"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "freebsd-10.1-x64-{{ .Provider }}.box",
      "keep_input_artifact": false
    }
  ]
}
