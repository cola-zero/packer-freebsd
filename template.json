{
  "builders": [
    {
      "vm_name": "freebsd-10.1",
      "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/ISO-IMAGES-amd64/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
      "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
      "iso_checksum_type": "sha256",
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter><wait>",
        "<wait10><wait5>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait5>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh | sh<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 40960,
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": true,

      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64",
      "vboxmanage": [
        [ "modifyvm", "{{ .Name }}", "--memory", "2048" ]
      ]
    },
    {
      "vm_name": "freebsd-10.1",
      "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/ISO-IMAGES-amd64/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
      "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
      "iso_checksum_type": "sha256",
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter><wait>",
        "<wait10><wait5>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait5>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh | sh<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 40960,
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": true,

      "type": "vmware-iso",
      "guest_os_type": "freebsd-64",
      "tools_upload_flavor": "freebsd",
      "vmx_data": {
        "memsize": "2048"
      }
    },
    {
      "vm_name": "freebsd-10.1",
      "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/ISO-IMAGES-amd64/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
      "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
      "iso_checksum_type": "sha256",
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter><wait>",
        "<wait10><wait5>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.vtnet0 vtnet0<enter><wait5>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh | sh<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 40960,
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": true,

      "type": "qemu",
      "accelerator": "kvm",
      "format": "qcow2",
      "qemuargs": [
        [ "-m", "2048M" ]
      ],
      "qemu_binary": "/usr/libexec/qemu-kvm"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/virtualbox.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/vmware.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
      "only": ["vmware-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "freebsd-10.1-x64-{{ .Provider }}.box",
      "keep_input_artifact": false
    }
  ]
}
