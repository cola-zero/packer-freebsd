{
  "builders": [
    {
      "vm_name": "freebsd-10.1",
      "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/ISO-IMAGES-amd64/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
      "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
      "iso_checksum_type": "sha256",
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter><wait>",
        "<wait10><wait5>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -p /tmp/dhclient.pid -l /tmp/dhclient.lease em0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "fetch -q -o - http://{{ .HTTPIP }}:{{ .HTTPPort }}/zfsboot-fix.sh | sh <enter><wait5>",
        "bsdinstall script /tmp/installerconfig; shutdown -r now<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 40960,
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": true,

      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64"
    },
